<%- include("partials/header"); -%>

<style type="text/css">
	#perc{
		overflow: scroll;
		overflow-x: hidden;
		height: 200px;
		width: 100%;
	}
	
	#container{
		background-color: lightblue;
		outline: lightgrey solid .5px;
		height: 300px;
	}
	button{
		width: 45%;
		background-color: lightgrey;
		color: black;
		margin-top: 10px;
		outline: 1px solid black;
	}
</style>

<div class="container">
	
		<div id="col-lg-12">
		  <h1 class= "text-center"> <%= content %> </p>
		  <h1> <%= name %> </h1>
		</div>
	<div class="row justify-content-around">
		<div class="col-lg-3" id="container">
			<h3 class="text-center">User Info</h3>
			<label>Date of birth</label>
				<p> <%= user.DoB %> </p>
			<label>Gender</label>
				<p> <%= user.gender %> </p>
			<label>Email</label>
				<p> <%= user.email %> </p>
		</div>

		<div class="col-lg-4 col-lg-offset-1 " id="container">
			<h3 class="text-center">Make an Appointment</h3>
		  		<form action="/makeApp" method="post">
		  			<label>Date</label>
		  			<input style="background-color: white; outline: .5px solid lightgrey; width: 90%; border-radius: 5px; height: 30px;" type="Date" placeholder="MM/DD/YYYY" name="appDate" required=""></input>
		  			<label>Time</label>
		  			<input style="background-color: white; outline: .5px solid lightgrey; width: 90%; border-radius: 5px; height: 30px;" type="time" value="09:00" min="09:00" max="18:00" name="appTime" required=""></input>
		  			<input type="hidden" name="userID" value="<%= user._id %>"></input>
					<button class="btn" type="submit">Make Appointment</button>
		  		</form>
		</div>

		<div class="col-lg-3 col-lg-offset-1 " id="container">
			<h3 class="text-center">Upcoming Appointments</h3>
		</div>
	</div>
</div>
<%- include("partials/footer"); -%>
